{
  "name": "rabbit-mq",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "private": true,
  "scripts": {
    "clean": "rimraf dist .turbo",
    "build:dev": "tsc",
    "build": "pnpm run prebuild && tsup",
    "lint": "eslint --ext .ts src",
    "typecheck": "tsc --noEmit",
    "prebuild" : "pnpm run typecheck"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "utils": "workspace:*"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "typescript": "^4.9.4",
    "tsconfig": "workspace:*",
    "eslint-config-custom": "workspace:*"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "format": ["cjs", "esm"],
    "dts": true,
    "treeshake": "recommended",
    "minify": false
  }
}