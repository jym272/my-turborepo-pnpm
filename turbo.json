{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*"]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "outputs": ["dist/**/*"],
      "inputs": ["src/**/*"]
    },
    "lint": {},
    "micro-*#dev": {
      "dependsOn": ["rabbit-mq#build:dev"],
      "outputs": ["dist/**/*"],
      "inputs": ["src/**/*"],
      "cache": false,
      "persistent": true
    },
    "saga#dev": {
      "dependsOn": ["utils#build:dev", "rabbit-mq#build:dev"],
      "outputs": ["dist/**/*"],
      "inputs": ["src/**/*"],
      "env": ["POSTGRES_*", "RABBIT_URI", "CORS_LIST", "PORT"],
      "dotEnv": [".env"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
